!#/bin/bash

# verifying if Minikube is installed
if !command -v minikube &> /dev/null
then 
    echo "âŒ Minikube is not installed. Please install it first:"
    echo "   https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

# starting minikube
echo "ğŸš€ Starting Minikube Kubernetes cluster..."
minikube start

# Verify cluster is running
echo "âœ… Verifying cluster..."
kubectl cluster-info

# Retrieve available pods in all namespaces
echo "ğŸ“¦ Retrieving pods (all namespaces)..."
kubectl get pods --all-namespaces
